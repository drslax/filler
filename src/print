#include "../inc/filler.h"

void	print_tab(int **tab, int x, int y)
{
	int		i,j;

	i = -1;
	while (++i < y)
	{
		j = 0;
		ft_putnbr_fd(i, 2);
		ft_putstr_fd(" : ", 2);
		while (j < x)
		{
			if (tab[i][j] <= 9 && tab[i][j] >=0)
				ft_putstr_fd(" ", 2);
			ft_putnbr_fd(tab[i][j], 2);
			j++;	
		}
		ft_putstr_fd("\n", 2);
	}
}
